@page "/register"
@using Olympics.Metier.Business
@inject Olympics.Database.Services.UserService userService

<PageTitle>S'inscrire</PageTitle>

<!-- Le menu de navigation est inclus ici -->
<Navigation />


<div class="register-container">
    <!-- Conteneur pour l'image de fond -->
    <div class="background-container-register">
    </div>
    <RadzenRow Class="style-form-register-row">
        <RadzenColumn Size="12">

            <div class="style-form-register">
                <RadzenTemplateForm TItem="cUtilisateurBase" Data="@user" Submit="@RegisterUser">
                    <div class="items-title-register">
                        <RadzenRow>
                            <RadzenColumn Size="12">
                                <RadzenText Text="S'inscrire" TextStyle="TextStyle.H3" TagName="TagName.H1" />
                            </RadzenColumn>
                        </RadzenRow>
                    </div>
                    <RadzenRow Class="style-form-register-row">
                        <RadzenColumn Size="6">
                            <RadzenLabel Text="Prénom" />
                            <RadzenTextBox @bind-Value="user.PrenomClient" Name="FirstName" Style="width:100%" />
                            <RadzenRequiredValidator Component="FirstName" Text="Le pr�nom est obligatoire" />
                        </RadzenColumn>
                        <RadzenColumn Size="6">
                            <RadzenLabel Text="Nom" />
                            <RadzenTextBox @bind-Value="user.NomClient" Name="LastName" Style="width:100%" />
                            <RadzenRequiredValidator Component="LastName" Text="Le nom de famille est obligatoire" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow Class="style-form-register-row">
                        <RadzenColumn Size="6">
                            <RadzenLabel Text="Email" />
                            <RadzenTextBox @bind-Value="user.EmailClient" Name="Email" Style="width:100%" oninput="toLowerCaseInput(event)"/>
                            <RadzenRequiredValidator Component="Email" Text="L'email est obligatoire" />
                            <RadzenEmailValidator Component="Email" Text="Entrez une adresse e-mail valide" />
                        </RadzenColumn>
                        <RadzenColumn Size="6">
                            <RadzenLabel Text="Mot de passe" />
                            <RadzenPassword @bind-Value="user.ShaMotDePasse" Name="Password" Style="width:100%" />
                            <RadzenRequiredValidator Component="Password" Text="Le mot de passe est requis" />
                            <RadzenCompareValidator Component="PasswordConfirm" Value="@(user.ShaMotDePasse)" Text="Les mots de passe ne correspondent pas" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow Class="style-form-register-row">
                        <RadzenColumn Size="6">
                            <RadzenLabel Text="Confirmer le mot de passe" />
                            <RadzenPassword @bind-Value="motDePasseConfirmation" Name="PasswordConfirm" Style="width:100%" />
                            <RadzenRequiredValidator Component="PasswordConfirm" Text="Un mot de passe de confirmation est requis" />
                            <RadzenCompareValidator Component="PasswordConfirm" Value="@(user.ShaMotDePasse)" Text="Les mots de passe ne correspondent pas" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow>
                        <RadzenColumn Size="12">
                            <label class="register-text-terms">
                                <input type="checkbox" required>
                                En créant votre compte, vous acceptez les <a href="lien_vers_termes_et_conditions" target="_blank">termes et conditions</a>.
                            </label>
                        </RadzenColumn>
                    </RadzenRow>


                    <RadzenRow>
                        <RadzenColumn Size="12">
                            <RadzenButton class="register-button" Text="S'inscrire" ButtonStyle="ButtonStyle.Primary" Type="Submit" Style="width:100%" />
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenTemplateForm>
            </div>
        </RadzenColumn>
    </RadzenRow>
</div>
<Footer /> <!-- Le footer est inclus ici -->